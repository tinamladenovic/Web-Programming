{"ast":null,"code":"import axios from 'axios';\nimport { ref, onMounted } from 'vue';\nexport default {\n  setup() {\n    const factory = ref(null);\n    const chocolates = ref([]);\n    const selectedChocolate = ref(null);\n    const newQuantity = ref(0);\n    const fetchWorkerData = async () => {\n      try {\n        const response = await axios.get('http://localhost:8080/WebShopAppREST/rest/currentUser', {\n          withCredentials: true\n        });\n        const worker = response.data;\n\n        // Fetch factory details\n        const factoryResponse = await axios.get(`http://localhost:8080/WebShopAppREST/rest/chocolateFactoryObjects/${worker.factoryId}`, {\n          withCredentials: true\n        });\n        factory.value = factoryResponse.data;\n        chocolates.value = factory.value.chocolates;\n      } catch (error) {\n        console.error('Error fetching worker data:', error);\n      }\n    };\n    const selectChocolate = chocolate => {\n      selectedChocolate.value = chocolate;\n      newQuantity.value = chocolate.quantity;\n    };\n    const updateQuantity = async () => {\n      if (selectedChocolate.value && newQuantity.value >= 0) {\n        try {\n          const updatedChocolate = {\n            ...selectedChocolate.value,\n            quantity: newQuantity.value\n          };\n          await axios.put(`http://localhost:8080/WebShopAppREST/rest/chocolates/${selectedChocolate.value.id}`, updatedChocolate, {\n            withCredentials: true\n          });\n          selectedChocolate.value.quantity = newQuantity.value;\n          alert('Quantity updated successfully.');\n        } catch (error) {\n          console.error('Error updating chocolate quantity:', error);\n          alert('An error occurred while updating quantity.');\n        }\n      }\n    };\n    onMounted(() => {\n      fetchWorkerData();\n    });\n    return {\n      factory,\n      chocolates,\n      selectedChocolate,\n      newQuantity,\n      selectChocolate,\n      updateQuantity\n    };\n  }\n};","map":{"version":3,"names":["axios","ref","onMounted","setup","factory","chocolates","selectedChocolate","newQuantity","fetchWorkerData","response","get","withCredentials","worker","data","factoryResponse","factoryId","value","error","console","selectChocolate","chocolate","quantity","updateQuantity","updatedChocolate","put","id","alert"],"sources":["C:\\Users\\PC\\eclipse-workspace\\apache-tomcat-9.0.89\\apache-tomcat-9.0.89\\webapps\\chocolate-factory-2\\Kostur\\Frontend\\front-app\\src\\views\\WorkerView.vue"],"sourcesContent":["<template>\r\n  <div class=\"d-flex justify-content-center align-items-center vh-100 blue-background\">\r\n    <div class=\"worker-view\">\r\n      <div v-if=\"factory\" class=\"factory-profile section-container\">\r\n        <h2 class=\"text-center mb-4 blue-label\">{{ factory.name }}</h2>\r\n        <p class=\"text-center\"><strong>Location:</strong> {{ factory.location.address }}</p>\r\n        <p class=\"text-center\"><strong>Working Hours:</strong> {{ factory.openingTime }} - {{ factory.closingTime }}</p>\r\n        <p class=\"text-center\"><strong>Rating:</strong> {{ factory.rating }}</p>\r\n        <p class=\"text-center\"><strong>Status:</strong> {{ factory.status }}</p>\r\n      </div>\r\n\r\n      <div v-if=\"factory\" class=\"section-container\">\r\n        <h2 class=\"text-center mb-4 blue-label\">Chocolates</h2>\r\n\r\n        <div v-if=\"chocolates.length\">\r\n          <h3 class=\"text-center\">Select a chocolate to update quantity:</h3>\r\n          <ul class=\"chocolates-list\">\r\n            <li v-for=\"chocolate in chocolates\" :key=\"chocolate.id\" @click=\"selectChocolate(chocolate)\">\r\n              {{ chocolate.name }} - {{ chocolate.quantity }} pcs\r\n            </li>\r\n          </ul>\r\n        </div>\r\n      </div>\r\n\r\n      <div v-if=\"selectedChocolate\" class=\"edit-quantity text-center\">\r\n        <h3>Update quantity for: {{ selectedChocolate.name }}</h3>\r\n        <input v-model.number=\"newQuantity\" type=\"number\" min=\"0\" placeholder=\"Enter new quantity\" class=\"form-control half-width mx-auto\">\r\n        <button @click=\"updateQuantity\" class=\"btn btn-outline-primary mt-2\">Update Quantity</button>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport axios from 'axios';\r\nimport { ref, onMounted } from 'vue';\r\n\r\nexport default {\r\n  setup() {\r\n    const factory = ref(null);\r\n    const chocolates = ref([]);\r\n    const selectedChocolate = ref(null);\r\n    const newQuantity = ref(0);\r\n\r\n    const fetchWorkerData = async () => {\r\n      try {\r\n        const response = await axios.get('http://localhost:8080/WebShopAppREST/rest/currentUser', {\r\n          withCredentials: true,\r\n        });\r\n        const worker = response.data;\r\n\r\n        // Fetch factory details\r\n        const factoryResponse = await axios.get(`http://localhost:8080/WebShopAppREST/rest/chocolateFactoryObjects/${worker.factoryId}`, {\r\n          withCredentials: true,\r\n        });\r\n        factory.value = factoryResponse.data;\r\n        chocolates.value = factory.value.chocolates;\r\n      } catch (error) {\r\n        console.error('Error fetching worker data:', error);\r\n      }\r\n    };\r\n\r\n    const selectChocolate = (chocolate) => {\r\n      selectedChocolate.value = chocolate;\r\n      newQuantity.value = chocolate.quantity;\r\n    };\r\n\r\n    const updateQuantity = async () => {\r\n      if (selectedChocolate.value && newQuantity.value >= 0) {\r\n        try {\r\n          const updatedChocolate = { ...selectedChocolate.value, quantity: newQuantity.value };\r\n          await axios.put(`http://localhost:8080/WebShopAppREST/rest/chocolates/${selectedChocolate.value.id}`, updatedChocolate, {\r\n            withCredentials: true,\r\n          });\r\n          selectedChocolate.value.quantity = newQuantity.value;\r\n          alert('Quantity updated successfully.');\r\n        } catch (error) {\r\n          console.error('Error updating chocolate quantity:', error);\r\n          alert('An error occurred while updating quantity.');\r\n        }\r\n      }\r\n    };\r\n\r\n    onMounted(() => {\r\n      fetchWorkerData();\r\n    });\r\n\r\n    return {\r\n      factory,\r\n      chocolates,\r\n      selectedChocolate,\r\n      newQuantity,\r\n      selectChocolate,\r\n      updateQuantity,\r\n    };\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.d-flex {\r\n  min-height: 100vh;\r\n  background-color: #007bff; /* Blue background */\r\n}\r\n\r\n.worker-view {\r\n  max-width: 800px;\r\n  margin: 0 auto;\r\n  padding: 20px;\r\n  background-color: #f9f9f9;\r\n  border-radius: 8px;\r\n  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);\r\n  text-align: center; /* Centering text */\r\n}\r\n\r\nh2.blue-label {\r\n  color: #007bff;\r\n}\r\n\r\n.section-container {\r\n  border: 2px solid #007bff;\r\n  padding: 20px;\r\n  border-radius: 8px;\r\n  margin-bottom: 20px;\r\n  background-color: #e9f5ff;\r\n}\r\n\r\n.factory-profile {\r\n  margin-bottom: 20px;\r\n}\r\n\r\n.factory-profile p {\r\n  margin: 5px 0;\r\n  text-align: center; /* Centering text */\r\n}\r\n\r\n.chocolates-list {\r\n  list-style-type: none;\r\n  padding: 0;\r\n}\r\n\r\n.chocolates-list li {\r\n  padding: 10px;\r\n  cursor: pointer;\r\n  background-color: #f2f2f2;\r\n  margin-bottom: 10px;\r\n  border-radius: 4px;\r\n  text-align: center; /* Centering text */\r\n}\r\n\r\n.chocolates-list li:hover {\r\n  background-color: #e0e0e0;\r\n}\r\n\r\n.edit-quantity {\r\n  margin-top: 20px;\r\n}\r\n\r\n.edit-quantity input {\r\n  margin-right: 10px;\r\n  padding: 10px;\r\n  width: 50%;\r\n  border: 1px solid #007bff;\r\n  border-radius: 8px;\r\n  font-size: 1.1rem;\r\n  transition: border-color 0.3s ease, box-shadow 0.3s ease;\r\n}\r\n\r\n.edit-quantity input:focus {\r\n  border-color: #007bff;\r\n  box-shadow: 0 0 5px rgba(0, 123, 255, 0.25);\r\n}\r\n\r\n.edit-quantity button {\r\n  padding: 10px;\r\n  background-color: transparent;\r\n  color: #007bff;\r\n  border: 1px solid #007bff;\r\n  border-radius: 8px;\r\n  font-size: 1.1rem;\r\n  transition: background-color 0.3s ease, color 0.3s ease;\r\n}\r\n\r\n.edit-quantity button:hover {\r\n  background-color: #007bff;\r\n  color: white;\r\n}\r\n</style>\r\n"],"mappings":"AAkCA,OAAOA,KAAI,MAAO,OAAO;AACzB,SAASC,GAAG,EAAEC,SAAQ,QAAS,KAAK;AAEpC,eAAe;EACbC,KAAKA,CAAA,EAAG;IACN,MAAMC,OAAM,GAAIH,GAAG,CAAC,IAAI,CAAC;IACzB,MAAMI,UAAS,GAAIJ,GAAG,CAAC,EAAE,CAAC;IAC1B,MAAMK,iBAAgB,GAAIL,GAAG,CAAC,IAAI,CAAC;IACnC,MAAMM,WAAU,GAAIN,GAAG,CAAC,CAAC,CAAC;IAE1B,MAAMO,eAAc,GAAI,MAAAA,CAAA,KAAY;MAClC,IAAI;QACF,MAAMC,QAAO,GAAI,MAAMT,KAAK,CAACU,GAAG,CAAC,uDAAuD,EAAE;UACxFC,eAAe,EAAE;QACnB,CAAC,CAAC;QACF,MAAMC,MAAK,GAAIH,QAAQ,CAACI,IAAI;;QAE5B;QACA,MAAMC,eAAc,GAAI,MAAMd,KAAK,CAACU,GAAG,CAAE,qEAAoEE,MAAM,CAACG,SAAU,EAAC,EAAE;UAC/HJ,eAAe,EAAE;QACnB,CAAC,CAAC;QACFP,OAAO,CAACY,KAAI,GAAIF,eAAe,CAACD,IAAI;QACpCR,UAAU,CAACW,KAAI,GAAIZ,OAAO,CAACY,KAAK,CAACX,UAAU;MAC7C,EAAE,OAAOY,KAAK,EAAE;QACdC,OAAO,CAACD,KAAK,CAAC,6BAA6B,EAAEA,KAAK,CAAC;MACrD;IACF,CAAC;IAED,MAAME,eAAc,GAAKC,SAAS,IAAK;MACrCd,iBAAiB,CAACU,KAAI,GAAII,SAAS;MACnCb,WAAW,CAACS,KAAI,GAAII,SAAS,CAACC,QAAQ;IACxC,CAAC;IAED,MAAMC,cAAa,GAAI,MAAAA,CAAA,KAAY;MACjC,IAAIhB,iBAAiB,CAACU,KAAI,IAAKT,WAAW,CAACS,KAAI,IAAK,CAAC,EAAE;QACrD,IAAI;UACF,MAAMO,gBAAe,GAAI;YAAE,GAAGjB,iBAAiB,CAACU,KAAK;YAAEK,QAAQ,EAAEd,WAAW,CAACS;UAAM,CAAC;UACpF,MAAMhB,KAAK,CAACwB,GAAG,CAAE,wDAAuDlB,iBAAiB,CAACU,KAAK,CAACS,EAAG,EAAC,EAAEF,gBAAgB,EAAE;YACtHZ,eAAe,EAAE;UACnB,CAAC,CAAC;UACFL,iBAAiB,CAACU,KAAK,CAACK,QAAO,GAAId,WAAW,CAACS,KAAK;UACpDU,KAAK,CAAC,gCAAgC,CAAC;QACzC,EAAE,OAAOT,KAAK,EAAE;UACdC,OAAO,CAACD,KAAK,CAAC,oCAAoC,EAAEA,KAAK,CAAC;UAC1DS,KAAK,CAAC,4CAA4C,CAAC;QACrD;MACF;IACF,CAAC;IAEDxB,SAAS,CAAC,MAAM;MACdM,eAAe,CAAC,CAAC;IACnB,CAAC,CAAC;IAEF,OAAO;MACLJ,OAAO;MACPC,UAAU;MACVC,iBAAiB;MACjBC,WAAW;MACXY,eAAe;MACfG;IACF,CAAC;EACH;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependen